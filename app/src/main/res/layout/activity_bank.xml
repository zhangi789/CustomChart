<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/mtab"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y60"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabTextAppearance="@style/MyTab"
        app:tabTextColor="@color/tab_select_color" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/mBankChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/mtab"
        android:layout_marginTop="@dimen/x12"
        android:layout_centerHorizontal="true"></com.github.mikephil.charting.charts.LineChart>


    <include
        layout="@layout/layout_toolbar"></include>




</RelativeLayout>